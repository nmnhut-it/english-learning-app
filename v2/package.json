{
  "name": "english-learning-app-v2",
  "version": "2.0.0",
  "type": "module",
  "description": "Framework-less vanilla TypeScript English learning app for Global Success curriculum",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext ts,js",
    "format": "prettier --write src",
    "convert-content": "node tools/content-converter/index.js",
    "validate-xml": "node tools/xml-validator/index.js",
    "test": "vitest",
    "test:ui": "vitest --ui"
  },
  "dependencies": {
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "@types/marked": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.2",
    "vite": "^5.0.8",
    "vitest": "^1.0.4",
    "@vitest/ui": "^1.0.4"
  },
  "keywords": [
    "english",
    "learning",
    "education",
    "vanilla-typescript",
    "global-success",
    "vocabulary",
    "quiz"
  ],
  "author": "English Learning App Team",
  "license": "MIT"
}